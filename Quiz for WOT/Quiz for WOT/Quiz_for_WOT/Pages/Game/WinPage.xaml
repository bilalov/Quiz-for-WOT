<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz_for_WOT.Pages.Game.WinPage">
  <StackLayout BackgroundColor="#3A392F" Spacing="15" Padding="15">
    <Image Source="logowinview.jpg" Margin="0,20,0,0"></Image>
    <StackLayout HorizontalOptions="Center">
      <Label Text="" x:Name="LabelTitle" FontSize="26" FontAttributes="Bold" TextColor="#D0D0BA"></Label>
      <StackLayout Orientation="Horizontal">
        <StackLayout>
          <Label Text=" " x:Name="LabelGetMoney" TextColor="#D0D0BA"></Label>
        </StackLayout>
        <StackLayout>
          <Label Text="{Binding }" TextColor="#E7D748" FontSize="15"></Label>
        </StackLayout>
      </StackLayout>
      <Button Text="" x:Name="LabelToMenu" Clicked="GoToMenuButton"/>
    </StackLayout>
  </StackLayout>
</ContentPage>